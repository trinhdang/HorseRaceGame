<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!--Horse racing tracks-->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#D2691E" />
            <!--Add "size" property-->
            <size
                android:width="1000dp"
                android:height="60dp" />
        </shape>
    </item>

    <!--Lane 1-->
    <item
        android:bottom="42dp"
        android:left="35dp"
        android:right="5dp"
        android:top="2dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#FFFFFFFF" />
            <solid android:color="#f00f1cd1" />
            <corners android:radius="3dp" />
        </shape>
    </item>

    <!--Lane 2-->
    <item
        android:bottom="22dp"
        android:left="20dp"
        android:right="20dp"
        android:top="22dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <solid android:color="#f011a30f" />
            <corners android:radius="3dp" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

    <!--Lane 3-->
    <item
        android:bottom="2dp"
        android:left="5dp"
        android:right="35dp"
        android:top="42dp">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                android:color="#fff" />
            <solid android:color="#f0ea0e54" />
            <corners android:radius="3dp" />
            <size
                android:width="10dp"
                android:height="10dp" />
        </shape>
    </item>

</layer-list>